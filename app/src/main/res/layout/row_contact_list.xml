<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <app.sosdemo.common.CustomTextView
            android:id="@+id/row_contactlist_tv_name"
            style="@style/listview_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name" />

        <app.sosdemo.common.CustomTextView
            android:id="@+id/row_contactlist_tv_address"
            style="@style/listview_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="center|left"
            android:text="Name" />

        <app.sosdemo.common.CustomTextView
            android:id="@+id/row_contactlist_tv_landline"
            style="@style/listview_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="center|left"
            android:text="Name" />


        <app.sosdemo.common.CustomTextView
            android:id="@+id/row_contactlist_tv_mobile"
            style="@style/listview_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="center|left"
            android:text="Name" />

        <app.sosdemo.common.CustomTextView
            android:id="@+id/row_contactlist_tv_fax"
            style="@style/listview_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="center|left"
            android:text="Name" />

        <app.sosdemo.common.CustomTextView
            android:id="@+id/row_contactlist_tv_emailid"
            style="@style/listview_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:drawableLeft="@drawable/ic_mail"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="center|left"
            android:text="Name" />
    </LinearLayout>
</LinearLayout>