<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="btn" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:minWidth">1.0dip</item>
        <item name="android:minHeight">1.0dip</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/color_white</item>

    </style>

    <style name="editext_normal" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/edittext_font_size</item>
        <item name="android:ems">5</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:drawablePadding">@dimen/_7sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/main_color_gray_lt</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:lines">1</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="label_normal" parent="@android:style/Widget.TextView">

        <item name="android:textSize">@dimen/radio_font_size</item>
        <item name="android:textColor">@color/color_white</item>

    </style>

    <style name="listview_text" parent="@android:style/Widget.TextView">

        <item name="android:textSize">@dimen/listview_text_size</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="button_normal" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:background">@color/color_actionbar</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:padding">@dimen/_5sdp</item>

    </style>

    <style name="editext_normal.multiline" parent="editext_normal">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:lines">3</item>
        <item name="android:ems">20</item>
    </style>

    <style name="WhiteCheck">
        <item name="colorAccent">@color/color_actionbar</item>
    </style>
</resources>
